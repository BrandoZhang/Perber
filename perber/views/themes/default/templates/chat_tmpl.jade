script#chat_box(type='text/html')
    .chat-box(data-id="{{ id }}")
        {{> chat_box_text }}

script#chat_box_text(type='text/html')
    p(class="{{ lang }} inner")
        | {{ msg }}
        span.info
            a.time(title='{{ time }}', href='/per/{{ id }}') {{ time }}
            b.location
                i.fa.fa-globe
                {{ location }}

script#music_box(type='text/html')
    .chat-box(data-id="{{ id }}")
        .musicBoxWapper.inner
            figure.musicBox
                .cover(style="background-image:url({{ cover }});background-size: 110%;")
                .playerInner
                    .music_info
                        figcaption.music_title {{ title }}
                        div
                            span.music_artist {{ artist }} - 《{{ album }}》

                    .zenPlayer(id="jquery_jplayer_{{ id }}", data-location="{{ song_location }}", data-id="{{ id }}")
                        span.player
                        span.circle
                        span.progress
                        span.buffer
                        span.drag
                        .button
                            span.icon.play
                            span.icon.pause

            span.info
                a.time(title='{{ time }}', href='/per/{{ id }}') {{ time }}
                b.location
                    i.fa.fa-globe
                        {{ location }}
            span.xiami_icon
                a(href='{{ songOriginal }}', target='_blank') xiami

script#loader(type="text/html")
   .loader
       // i.fa.fa-spinner.fa-spin

script#nullbox(type="text/html")
    .nullbox.header.ui.icon
        i.circular.icon.circle

script#progress(type="text/html")
    .progressWrapper
        .progress

script#upload_progress(type="text/html")
    .ui.bottom.attached.progress.green
        .bar

script#image_preview(type="text/html")
    #imagePreview
        .imgbox
            #previewInner(style="background-image:url({{ path }});background-size: cover;")
        #previewControl
            .buttons.ui
                a(data-id="{{ key }}", class="button ui icon red delete", title='Delete')
                    i(class='fa fa-times')
                .or
                a(data-id="{{ key }}", class="ui button green icon publish", title='Publish')
                    i(class='fa fa-check')


script#confirm_template(type='text/html')
    .confirm
        i(class='fa fa-times-circle delete', title='Delete')
        i(class='fa fa-minus-circle cancel', title='Cancel')

script#title_template(type='text/html')
    | {{#count}} ({{ count }}) {{/count}} Perber

script#about_content_template(type='text/html')
    .intro-wrap
        .intro-wrap-overlay
        .intro-wrap-content
            #IntroInner
                #Logo
                    i(class="fa fa-circle-o")
                    span Perber
                | 这是一个实时匿名群聊的网站。你可以删除所有人的对话，你的对话也可以被其他人删除。就是这样。
                //.author
                //    | Made by J.Y Han
                .link
                    a(href="https://github.com/naoyeye/Perber", target="_blank", class="github", title="Github")
                        i(class="fa fa-github")
                    a(href="https://trello.com/b/uWKLCDxb/perber", target="_blank", class="trello", title="Trello")
                        i(class="fa fa-trello")
            .intro-wrap-close

script#usage_content_template(type='text/html')
    .intro-wrap
        .intro-wrap-overlay
        .intro-wrap-content
            #IntroInner
                h3 'Hide yourselves, do cleanup'
                | Tips:<br><br>
                p
                    | * 按住白色对话方块，可以删除。<br>
                    | * 访问 Perber 的同时浏览其他网站，Perber 中有新消息时会有声音提醒<br>
                    | * 请不要恶意刷屏，不要浪费自己和大家的时间<br>
            .intro-wrap-close

script#notice_template(type='text/html')
    .notice
        .noticeInner
            |{{ text }}

script#vote_template(type='text/html')
    .ui.buttons
        a#v_upup.button.ui.black(class="{{ voted_class }}")
            span#count_upup {{ count_upup }}
        //- .or
        a#v_down.button.ui.black(class="{{ voted_class }}")
            span#count_down {{ count_down }}


